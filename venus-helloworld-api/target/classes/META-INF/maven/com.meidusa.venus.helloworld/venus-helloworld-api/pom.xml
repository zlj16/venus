<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>venus-helloworld</artifactId>
		<groupId>com.meidusa.venus.helloworld</groupId>
		<version>3.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>venus-helloworld-api</artifactId>
	<dependencies>
		<dependency>
			<groupId>com.meidusa.venus.commons</groupId>
			<artifactId>venus-common-exception</artifactId>
		</dependency>
		<dependency>
			<groupId>com.meidusa.toolkit</groupId>
			<artifactId>fastmark</artifactId>
			<version>1.0.2</version>
		</dependency>
	</dependencies>
	<build>
	   <extensions>
          <extension>
            <groupId>org.apache.maven.wagon</groupId>
            <artifactId>wagon-ssh</artifactId>
            <version>2.5</version>
	       </extension>
	       <extension>
	            <groupId>org.apache.maven.wagon</groupId>
	            <artifactId>wagon-ftp</artifactId>
	            <version>2.5</version>
	        </extension>
        </extensions> 
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<show>public</show>
				</configuration>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>javadoc</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
	            <groupId>org.codehaus.mojo</groupId>
	            <artifactId>wagon-maven-plugin</artifactId>
	            <version>1.0-beta-4</version>
	            <configuration>
                    <url>scp://docs.dds.com</url>
                    <serverId>api-site</serverId>
                    <fromDir>${project.basedir}/target/site/apidocs</fromDir>
                   <toDir>/home/docs/services/${project.artifactId}/${project.version}</toDir>
                </configuration>
                <executions>
                    <execution>
                        <phase>deploy</phase>
                        <goals>
                            <goal>upload</goal>
                        </goals>
                    </execution>
                </executions>
			</plugin>
		</plugins>
	</build>
	
</project>